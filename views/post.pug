extends layout 

block content 
  div(class='postCard')
    h2= post.title 
    h3= post.content
    div(class='postCardDetails')
      h4 Posted on: #{post.date}
      if post.edited 
        h4 Edited on: #{post.dateEdited}

  if admin
    div(class='postCard')
      h3 ADMIN TOOLS

      div(class='postCardDetails')
        if post.hidden 
          h4 This Post is Hidden 
        else 
          h4 This Post is NOT Hidden

        a(href=`/admin/posts/${post._id}/edit` class='moreButton')
          h4 EDIT POST
        
        form(method='post' action='')
          button(type='submit')
            h4 DELETE POST

  div(class='comments')
    h3(class='bodyTag') Comments(#{post.comments.length}):
    for comment in post.comments 
        div(class='postCard') 
          h4= comment.comment 
          div(class='postCardDetails')
            h5 Author: #{comment.author} 
            h5 Posted on #{comment.date}
            if admin
              form(method='post' action=`/admin/posts/${post._id}/comments/${comment.id}`)
                button(type='submit') 
                  h4 DELETE COMMENT
        

  div
    //- USE BACK TICKS AND DOLLAR SIGN TO EVALUATE VARS INSIDE OF STRINGS
    //- p= `/api/posts/${post._id}/comments
    div(class='postCard')
      h3(class='') New Comment:
      //- p= commentData
      p Comment Data: #{commentData}

      form(method='post' action=(admin ? '/admin/' : '/') + `posts/${post._id}/comments`)
        div(class='formInput')
          label(for='author') Author:
          input(type='text' name='author' id='author' value=(commentData ? commentData.author : ''))
        div(class='formInput')
          label(for='comment') Comment:
          textarea(name='comment' cols=50 rows=5 id='comment')
        hr
        button(type='submit') 
          h4 NEW COMMENT
